{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true, 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": false, 
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/**/*.ts"
  ]
}